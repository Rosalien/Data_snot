<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.cnrs.osuc</groupId>
        <artifactId>snot</artifactId>
        <version>1902.01-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>
    <artifactId>snot-core-services-impl</artifactId>
    <name>snot-core-services-impl</name>
    <packaging>jar</packaging>
    <description>this module is an implementation of commons functionalities of core functionalities of SI SNO-T application</description>
    <properties>
        <stagingDirectory>../target/site</stagingDirectory>
    </properties>

    <build>
        <resources>
            <resource>
                <targetPath>./META-INF</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/webapp</directory>
                <includes>
                    <include>resources/**</include>
                    <include>templates/**</include>
                </includes>
            </resource>
            <resource>
                <targetPath>./META-INF/resources</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/webapp</directory>
                <includes>
                    <include>*.xhtml</include>
                    <include>**/*.xhtml</include>
                </includes>
            </resource>

            <resource>
                <targetPath>./META-INF</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/webapp/WEB-INF</directory>
                <includes>
                    <include>faces-config.xml</include>
                </includes>
            </resource>

            <resource>
                <targetPath>.</targetPath>
                <filtering>true</filtering>
                <directory>${basedir}/src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${surefire.version}</version>
                <!--version>2.16</version -->
                <configuration>
                    <forkCount>10</forkCount>
                    <reuseForks>false</reuseForks>
                    <skipTests>false</skipTests>
                    <testSourceDirectory>src/test</testSourceDirectory>
                    <systemPropertyVariables>
                        <propertyName>concordion.output.dir</propertyName>
                        <buildDirectory>target/concordion</buildDirectory>
                        <lib>${project.build.testOutputDirectory}/WEB-INF/lib</lib>                  
                        <java.io.tmpdir>${project.basedir}/target</java.io.tmpdir>
                    </systemPropertyVariables>
                    <testFailureIgnore>false</testFailureIgnore>
                    <includes>
                        <include>/org.cnrs.osuc/snot/SnotCoreFastTestFixture.java</include>
                        <include>**/*Test.java</include>
                    </includes>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>${surefire.version}</version>
                        <!--version>2.16</version -->
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${maven.source.version}</version>
                <executions>
                    <execution>
                        <id>test-jar</id>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <exclude>META-INF/**</exclude>
                                <exclude>log4j**</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.jar.version}</version>
                <executions>
                    <execution>
                        <id>test-jar</id>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <configuration>
                            <excludes>
                                <exclude>META-INF/**</exclude>
                                <exclude>log4j**</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>only-concordion</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${surefire.version}</version>
                        <!--version>2.16</version -->
                        <configuration>
                            <forkCount>1</forkCount>
                            <reuseForks>false</reuseForks>
                            <skipTests>false</skipTests>
                            <testSourceDirectory>src/test</testSourceDirectory>
                            <systemPropertyVariables>
                                <propertyName>concordion.output.dir</propertyName>
                                <buildDirectory>target/concordion</buildDirectory>
                                <lib>${project.build.testOutputDirectory}/WEB-INF/lib</lib>                  
                                <java.io.tmpdir>${project.basedir}/target</java.io.tmpdir>
                            </systemPropertyVariables>
                            <testFailureIgnore>${TestFailureIgnore}</testFailureIgnore>
                            <includes>
                                <include>/org.cnrs.osuc/snot/SnotCoreTestFixture.java</include>
                            </includes>
                        </configuration>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.maven.surefire</groupId>
                                <artifactId>surefire-junit47</artifactId>
                                <version>${surefire.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>without-concordion</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>${surefire.version}</version>
                        <!--version>2.16</version -->
                        <configuration>
                            <forkCount>1</forkCount>
                            <reuseForks>false</reuseForks>
                            <skipTests>false</skipTests>
                            <testSourceDirectory>src/test</testSourceDirectory>
                            <systemPropertyVariables>
                                <propertyName>concordion.output.dir</propertyName>
                                <buildDirectory>target/concordion</buildDirectory>
                                <lib>${project.build.testOutputDirectory}/WEB-INF/lib</lib>                  
                                <java.io.tmpdir>${project.basedir}/target</java.io.tmpdir>
                            </systemPropertyVariables>
                            <testFailureIgnore>false</testFailureIgnore>
                            <includes>
                                <include>**/*Test.java</include>
                            </includes>
                        </configuration>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.maven.surefire</groupId>
                                <artifactId>surefire-junit47</artifactId>
                                <version>${surefire.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <dependencies>
        <dependency>
            <groupId>org.cnrs.osuc</groupId>
            <artifactId>snot-core-services-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!--        <dependency>
            <groupId>com.google.code.guice</groupId>
            <artifactId>guice</artifactId>
            <version>2.0</version>
            <type>jar</type>
        </dependency>-->
        <dependency>
            <groupId>org.inra.ecoinfo</groupId>
            <artifactId>kernel-extraction-ui-jsf</artifactId>
            <version>1912.01</version>
            <exclusions>
                <exclusion>
                    <groupId>org.inra.ecoinfo</groupId>
                    <artifactId>kernel-core-ui-jsf</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.inra.ecoinfo</groupId>
            <artifactId>kernel-metadata-services-api</artifactId>
            <version>1912.01</version>
        </dependency>
    </dependencies>
</project>